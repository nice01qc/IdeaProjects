<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>NiceImg</servlet-name>
        <servlet-class>service.NiceImg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NiceImg</servlet-name>
        <url-pattern>/img</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NiceText</servlet-name>
        <servlet-class>service.NiceText</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NiceText</servlet-name>
        <url-pattern>/text</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>FilterImg</filter-name>
        <filter-class>filter.FilterImg</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterImg</filter-name>
        <servlet-name>NiceImg</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>FilterText</filter-name>
        <filter-class>filter.FilterText</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterText</filter-name>
        <servlet-name>NiceText</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>SecretFilt</filter-name>
        <filter-class>filter.SecretFilt</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecretFilt</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>f

</web-app>
