<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>NiceImg</servlet-name>
        <servlet-class>test.NiceImg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NiceImg</servlet-name>
        <url-pattern>/img</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NiceText</servlet-name>
        <servlet-class>test.NiceText</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NiceText</servlet-name>
        <url-pattern>/text</url-pattern>
    </servlet-mapping>


</web-app>
